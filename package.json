{
  "author": "Carles Capellas <capellas.carles@gmail.com>",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "license": "ISC",
  "name": "@weather/monorepo",
  "scripts": {
    "build": "npm run build -w @weather/common && npm run build -w @weather/client && npm run build -w @weather/server",
    "build:client": "npm run build -w @weather/client",
    "build:client:check": "npm run build:check -w @weather/client",
    "build:common": "npm run build -w @weather/common",
    "build:common:check": "npm run build:check -w @weather/common",
    "build:common:watch": "npm run build:watch -w @weather/common",
    "build:server": "npm run build -w @weather/server",
    "build:server:check": "npm run build:check -w @weather/server",
    "clean": "npm run clean -ws",
    "clean:client": "npm run clean -w @weather/client",
    "clean:common": "npm run clean -w @weather/common",
    "clean:server": "npm run clean -w @weather/server",
    "clean-modules": "rm -rf node_modules",
    "deploy-assets": "npm run build -w @weather/client && rm -rf projects/@weather/server/public && cp -a projects/@weather/client/distribution projects/@weather/server/public",
    "format:check": "prettier --list-different './projects/@weather/{client,common,server}/**/*.{js,ts,tsx}' './**/*.json'",
    "format:fix": "prettier --write './projects/@weather/{client,common,server}/**/*.{js,ts,tsx}' './**/*.json'",
    "prepare": "husky install",
    "start:dev": "concurrently --kill-others \"npm run build:common:watch\" \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:client": "npm run start:dev -w @weather/client",
    "start:dev:server": "npm run start:dev -w @weather/server",
    "start:server": "npm run start -w @weather/server"
  },
  "workspaces": [
    "./projects/@weather/*"
  ]
}

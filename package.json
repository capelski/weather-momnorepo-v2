{
  "author": "Carles Capellas <capellas.carles@gmail.com>",
  "devDependencies": {
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "engines": {
    "npm": ">=8.0.0",
    "node": ">=16.0.0"
  },
  "license": "ISC",
  "name": "weather-monorepo",
  "scripts": {
    "build": "npm run build:common && npm run build:client && npm run build:server",
    "build:client": "cd projects/weather-client && npm run build",
    "build:client:check": "cd projects/weather-client && npm run build:check",
    "build:common": "cd projects/weather-common && npm run build",
    "build:common:check": "cd projects/weather-common && npm run build:check",
    "build:common:watch": "cd projects/weather-common && npm run build:watch",
    "build:server": "cd projects/weather-server && npm run build",
    "build:server:check": "cd projects/weather-server && npm run build:check",
    "clean": "npm run clean:client && npm run clean:common && npm run clean:server",
    "clean:client": "cd projects/weather-client && npm run clean",
    "clean:client:modules": "cd projects/weather-client && npm run clean:modules",
    "clean:common": "cd projects/weather-common && npm run clean",
    "clean:modules": "rm -rf node_modules && npm run clean:client:modules && npm run clean:server:modules",
    "clean:server": "cd projects/weather-server && npm run clean",
    "clean:server:modules": "cd projects/weather-server && npm run clean:modules",
    "deploy-assets": "npm run build:client && rm -rf projects/weather-server/public && cp -a projects/weather-client/distribution projects/weather-server/public",
    "format:check": "prettier --list-different './projects/weather-{client,common,server}/**/*.{js,ts,tsx}' './**/*.json'",
    "format:fix": "prettier --write './projects/weather-{client,common,server}/**/*.{js,ts,tsx}' './**/*.json'",
    "install:client": "cd projects/weather-client && npm install",
    "install:server": "cd projects/weather-server && npm install",
    "postinstall": "npm run install:client && npm run install:server",
    "prepare": "husky install",
    "start:dev": "concurrently --kill-others \"npm run build:common:watch\" \"npm run start:dev:server\" \"npm run start:dev:client\"",
    "start:dev:client": "cd projects/weather-client && npm run start:dev",
    "start:dev:server": "cd projects/weather-server && npm run start:dev",
    "start:server": "cd projects/weather-server && npm run start"
  },
  "workspaces": [
    "./projects/*"
  ]
}
